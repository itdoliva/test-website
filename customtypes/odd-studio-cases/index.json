{
    "id": "odd-studio-cases",
    "label": "Test Cases",
    "repeatable": true,
    "status": true,
    "format": "page",
    "json": {
        "Main": {
            "uid": {
                "type": "UID",
                "config": {
                    "label": "Document ID",
                    "placeholder": "Unique identifier. It will be used in the URL of this document's page."
                }
            },
            "title": {
                "type": "Text",
                "config": {
                    "label": "Title",
                    "placeholder": "Title for this document. Please avoid long texts."
                }
            },
            "type": {
                "type": "Select",
                "config": {
                    "options": [
                        "Presentations, Reports & Infographics",
                        "Data Storytelling Micro-websites",
                        "Interactive Dashboards & Exploratory Solutions",
                        "Data Design Systems",
                        "-",
                        "Apresentações, Relatórios & Infográficos",
                        "Micro-sites de Narrativas de Dados",
                        "Dashboards Interativos & Soluções Exploratórias",
                        "Sistemas de Design de Dados"
                    ],
                    "label": "Type of work",
                    "placeholder": "Select an option from this drop-down list. Please pay attention to this document's current language."
                }
            },
            "priority": {
                "type": "Boolean",
                "config": {
                    "placeholder_false": "No.",
                    "placeholder_true": "Yes!",
                    "default_value": false,
                    "label": "Should this document be prioritized on landing pages?"
                }
            },
            "date": {
                "type": "Date",
                "config": {
                    "label": "Date",
                    "placeholder": "This date will be used to sort the cases."
                }
            },
            "before": {
                "type": "Text",
                "config": {
                    "label": "Before",
                    "placeholder": "Brief description of what the client had before this case."
                }
            },
            "delivery": {
                "type": "Text",
                "config": {
                    "label": "Delivery",
                    "placeholder": "Brief description of the main delivery of this case."
                }
            },
            "client": {
                "type": "Text",
                "config": {
                    "label": "Client",
                    "placeholder": "Name of the client related to this case."
                }
            },
            "year": {
                "type": "Text",
                "config": {
                    "label": "Year",
                    "placeholder": "The year in which the case was completed."
                }
            },
            "link": {
                "type": "Link",
                "config": {
                    "allowTargetBlank": true,
                    "label": "Link",
                    "placeholder": "Link to the case website or to some related content.",
                    "select": null
                }
            },
            "tools": {
                "type": "Text",
                "config": {
                    "label": "Tools",
                    "placeholder": "List of the main tools used in this case."
                }
            },
            "summary": {
                "type": "StructuredText",
                "config": {
                    "single": "strong,em,hyperlink",
                    "label": "Summary",
                    "placeholder": "A short text that summarizes this case."
                }
            },
            "preview": {
                "type": "Text",
                "config": {
                    "label": "Preview Text",
                    "placeholder": ""
                }
            },
            "display_image": {
                "type": "Image",
                "config": {
                    "constraint": {},
                    "thumbnails": [],
                    "label": "Display Image"
                }
            },
            "cover_image": {
                "type": "Image",
                "config": {
                    "constraint": {},
                    "thumbnails": [],
                    "label": "Cover Image"
                }
            },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "full_width_image": {
                            "type": "SharedSlice"
                        },
                        "video": {
                            "type": "SharedSlice"
                        },
                        "images": {
                            "type": "SharedSlice"
                        },
                        "external_link": {
                            "type": "SharedSlice"
                        },
                        "big_number": {
                            "type": "SharedSlice"
                        },
                        "quote": {
                            "type": "SharedSlice"
                        },
                        "unordered_list_item": {
                            "type": "SharedSlice"
                        },
                        "ordered_list": {
                            "type": "SharedSlice"
                        },
                        "paragraphs": {
                            "type": "SharedSlice"
                        },
                        "section_title": {
                            "type": "SharedSlice"
                        }
                    }
                }
            }
        }
    }
}
